generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/// Transaction records persist the `type` field as plain text so that the
/// model remains compatible with SQLite, which has no native enum support.
model Transaction {
  id        Int      @id @default(autoincrement())
  amount    Float
  category  String
  note      String?
  type      String
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
